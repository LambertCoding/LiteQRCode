<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/zxing_barcode_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zxing_framing_rect_height="250dp"
        app:zxing_framing_rect_width="250dp" />

    <com.github.liteqrcode.widget.ZxingViewFinderView
        android:id="@+id/zxing_viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scannerBoundColor="@android:color/transparent"
        app:scannerBoundCornerColor="@color/colorPrimary"
        app:scannerBoundCornerHeight="32dp"
        app:scannerBoundCornerWidth="4dp"
        app:scannerBoundWidth="0dp"
        app:scannerLaserHeight="2dp"
        app:scannerLaserRepeatMode="reverse"
        app:scannerTipText="将二维码图片放到取景框内即可自动扫描"
        app:scannerTipTextColor="@android:color/white"
        app:scannerTipTextGravity="top"
        app:scannerTipTextMargin="40dp"
        app:scannerTipTextSize="14sp"
        app:zxing_possible_result_points="@color/zxing_custom_possible_result_points"
        app:zxing_result_view="@color/zxing_custom_result_view"
        app:zxing_viewfinder_laser="@color/colorPrimary"
        app:zxing_viewfinder_mask="@color/zxing_custom_viewfinder_mask" />
</merge>